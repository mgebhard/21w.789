<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="org.teamscavengr.scavengr.goonhunt.RateHuntActivity">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewRatingBar"
        android:layout_above="@+id/submit_review"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comments:"
        android:id="@+id/notEditText"
        android:layout_alignTop="@+id/reviewRatingBar"
        android:layout_alignLeft="@+id/reviewRatingBar"
        android:layout_alignStart="@+id/reviewRatingBar"
        android:layout_marginTop="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/reviewComments"
        android:layout_below="@+id/notEditText"
        android:layout_alignLeft="@+id/notEditText"
        android:layout_alignStart="@+id/notEditText"
        android:layout_alignRight="@+id/submit_review"
        android:layout_alignEnd="@+id/submit_review" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hunt Title"
        android:id="@+id/reviewHuntTitle"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/reviewRatingBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:onClick="onClick"
        android:id="@+id/submit_review"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/check_button"/>
    <!--android:text="Submit"-->

</RelativeLayout>
